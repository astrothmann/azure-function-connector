{
  "$schema" : "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name" : "Azure Function Connector",
  "id" : "io.camunda.connector.azure.function.v1",
  "description" : "Invoke azure serverless functions from within processes",
  "documentationRef" : "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "version" : 1,
  "category" : {
    "id" : "connectors",
    "name" : "Connectors"
  },
  "appliesTo" : [ "bpmn:Task" ],
  "elementType" : {
    "value" : "bpmn:ServiceTask"
  },
  "groups" : [ {
    "id" : "authentication",
    "label" : "Authentication"
  }, {
    "id" : "configuration",
    "label" : "Configuration"
  }, {
    "id" : "output",
    "label" : "Output mapping"
  }, {
    "id" : "error",
    "label" : "Error handling"
  }, {
    "id" : "retries",
    "label" : "Retries"
  } ],
  "properties" : [ {
    "value" : "de.viadee.bpm.camunda:azure-serverless-connector:1",
    "binding" : {
      "type" : "zeebe:taskDefinition:type"
    },
    "type" : "Hidden"
  }, {
    "id" : "authentication.user",
    "label" : "Username",
    "description" : "The username for authentication",
    "optional" : false,
    "constraints" : {
      "notEmpty" : true
    },
    "feel" : "optional",
    "group" : "authentication",
    "binding" : {
      "name" : "authentication.user",
      "type" : "zeebe:input"
    },
    "type" : "String"
  }, {
    "id" : "authentication.token",
    "label" : "Token",
    "description" : "The token for authentication",
    "optional" : false,
    "constraints" : {
      "notEmpty" : true
    },
    "feel" : "optional",
    "group" : "authentication",
    "binding" : {
      "name" : "authentication.token",
      "type" : "zeebe:input"
    },
    "type" : "String"
  }, {
    "id" : "configuration.operation",
    "label" : "Select Operation",
    "optional" : false,
    "value" : "invoke_sync",
    "group" : "configuration",
    "binding" : {
      "name" : "configuration.operation",
      "type" : "zeebe:input"
    },
    "description": "Select operation to execute.",
    "type" : "Dropdown",
    "constraints" : {
      "notEmpty" : true
    },
    "choices": [
      {
        "name": "Invoke Function (Sync)",
        "value": "invoke_sync"
      },
      {
        "name": "Get List of Functions",
        "value": "get_list"
      }
    ]
  }, {
    "id" : "configuration.functionName",
    "label" : "Specify Function Name",
    "optional" : false,
    "group" : "configuration",
    "binding" : {
      "name" : "configuration.functionName",
      "type" : "zeebe:input"
    },
    "description": "Specify name of function to execute.",
    "type" : "Text",
    "constraints" : {
      "notEmpty" : true
    },
    "condition": {
      "property": "configuration.operation",
      "oneOf": [
        "invoke_sync"
      ]
    }
  }, {
    "id" : "resultVariable",
    "label" : "Result variable",
    "description" : "Name of variable to store the response in",
    "group" : "output",
    "binding" : {
      "key" : "resultVariable",
      "type" : "zeebe:taskHeader"
    },
    "type" : "String"
  }, {
    "id" : "resultExpression",
    "label" : "Result expression",
    "description" : "Expression to map the response into process variables",
    "feel" : "required",
    "group" : "output",
    "binding" : {
      "key" : "resultExpression",
      "type" : "zeebe:taskHeader"
    },
    "type" : "Text"
  }, {
    "id" : "errorExpression",
    "label" : "Error expression",
    "description" : "Expression to handle errors. Details in the <a href=\"https://docs.camunda.io/docs/components/connectors/use-connectors/\" target=\"_blank\">documentation</a>.",
    "feel" : "required",
    "group" : "error",
    "binding" : {
      "key" : "errorExpression",
      "type" : "zeebe:taskHeader"
    },
    "type" : "Text"
  }, {
    "id" : "retryBackoff",
    "label" : "Retry backoff",
    "description" : "ISO-8601 duration to wait between retries",
    "value" : "PT0S",
    "group" : "retries",
    "binding" : {
      "key" : "retryBackoff",
      "type" : "zeebe:taskHeader"
    },
    "type" : "Hidden"
  } ],
  "icon" : {
    "contents" : "data:image/svg+xml;base64,"
  }
}